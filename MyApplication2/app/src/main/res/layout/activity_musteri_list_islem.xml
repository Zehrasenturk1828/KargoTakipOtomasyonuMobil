<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Musteri_list_islem">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:gravity="center"
        android:text="MÜŞTERİ İŞLEMLERİ"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/buttongoster"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#4E77A1"
            android:text="LİSTELE"></Button>

        <Button
            android:id="@+id/buttonsil"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#4E77A1"
            android:text="SİL"></Button>

    </LinearLayout>

    <ListView
        android:id="@+id/musteriler"
        android:layout_width="match_parent"
        android:layout_height="650dp">
        </ListView>


</LinearLayout>