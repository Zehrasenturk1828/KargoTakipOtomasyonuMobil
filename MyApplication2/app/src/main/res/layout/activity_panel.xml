<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".panel">
    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:gravity="center"
        android:text="İŞLEM PANELİ"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gonderiolusturma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="#5F8AB1"
        android:text="GÖNDERİ OLUŞTUR"
        android:textSize="15dp" />

    <Button
        android:id="@+id/subesorgulama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="#5F8AB1"
        android:text="ŞUBE SORGULAMA"
        android:textSize="15dp" />

    <Button
        android:id="@+id/musteriolustur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="#5F8AB1"
        android:text="MÜŞTERİ OLUŞTUR"
        android:textSize="15dp" />

    <Button
        android:id="@+id/gonderidurumguncelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="#5F8AB1"
        android:text="GÖNDERİ DURUMUNU GÜNCELLE"
        android:textSize="15dp" />

    <Button
        android:id="@+id/gonderidurumsorgula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="#5F8AB1"
        android:text="GÖNDERİ DURUMUNU SORGULA"
        android:textSize="15dp" />

    <Button
        android:id="@+id/cikisyap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="#5F8AB1"
        android:text="OTURUMU KAPAT"
        android:textSize="15dp" />

</LinearLayout>